{
  "compilerOptions": {
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitThis": true
  },
  "exclude": [
    "node_modules"
  ]
}
